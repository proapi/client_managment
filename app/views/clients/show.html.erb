<% content_for :section_header do %>
    Szczegóły klienta
<% end %>

<% content_for :history do %>
    <%= link_to "Strona główna", root_url %> / <%= link_to "Szczegóły klienta", client_path(@client) %> / <%= link_to 'Wstecz', :back %>
<% end %>

<% content_for :help do %>
    <% help_block 'Podgląd danych klienta' %>
<% end %>

<% content_for :main_menu do %>
    <% render 'main_menu' %>
<% end %>


<div class="table">
  <table class="listing form" cellpadding="0" cellspacing="0">
    <tr>
      <th class="full" colspan="2">Szczegóły rekordu klienta</th>
    </tr>
    <tr>
      <td>Identyfikator</td>
      <td><strong><%= @client.identifier %></strong></td>
    </tr>
    <tr>
      <td>Nazwisko</td>
      <td><strong><%= @client.lastname %></strong></td>
    </tr>
    <tr>
      <td>Imię</td>
      <td><strong><%= @client.firstname %></strong></td>
    </tr>
    <tr>
      <td>Miasto</td>
      <td><strong><%= @client.address.city %></strong></td>
    </tr>
    <tr>
      <td>Kod pocztowy</td>
      <td><strong><%= @client.address.code %></strong></td>
    </tr>
    <tr>
      <td>Ulica</td>
      <td><strong><%= @client.address.street %></strong></td>
    </tr>
    <tr>
      <td>Telefon stacjonarny</td>
      <td><strong><%= @client.telephone %></strong></td>
    </tr>
    <tr>
      <td>Telefon komórkowy</td>
      <td><strong><%= @client.mobile %></strong></td>
    </tr>
    <tr>
      <td>E-mail</td>
      <td><strong><%= @client.email %></strong></td>
    </tr>
  </table>
</div>