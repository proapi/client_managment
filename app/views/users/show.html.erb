<% content_for :section_header do %>
    Szczegóły konta
<% end %>

<% content_for :history do %>
    <%= link_to "Strona główna", root_url %> / <%= link_to "Szczegóły konta", user_path(current_user) %> / <%= link_to 'Wstecz', :back %>
<% end %>

<% content_for :help do %>
    <% help_block 'Na tej stronie znajdują się wszystkie informacje dostępne o użytkowniku systemu.' %>
<% end %>

<div class="table">
  <table class="listing form" cellpadding="0" cellspacing="0">
    <tr>
      <th class="full" colspan="2">Szczegóły konta użytkownika</th>
    </tr>
    <tr>
      <td>Nazwisko</td>
      <td><strong><%= @user.name %></strong></td>
    </tr>
    <tr>
      <td>E-mail / login</td>
      <td><strong><%= @user.email if @user.email %></strong></td>
    </tr>
  </table>
</div>