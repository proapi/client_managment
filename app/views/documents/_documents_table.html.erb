<%= content_tag :div, class: 'table' do %>
    <table class="listing jquery_datatable" cellpadding="0" cellspacing="0">
      <thead>
      <%= content_tag :tr do %>
          <%= content_tag :th, 'Nazwa' %>
          <%= content_tag :th, 'Kraj' %>
          <%= content_tag :th, 'Akcje' %>
      <% end %>
      </thead>
      <tbody>
      <%= content_tag_for(:tr, @documents) do |document| %>
          <%= content_tag :td, (link_to document.title, document), class: 'style1' %>
          <%= content_tag :td, (link_to document.country.name, document.country), class: 'style1' %>
          <%= content_tag :td, class: 'actions' do %>
              <%= link_to image_tag('info.png'), document, title: "Szczegółowe informacje" %>
              <%= link_to image_tag('modify.png'), edit_document_path(document), title: "Edycja" %>
              <%= link_to image_tag('delete.png'), document, :confirm => "Czy jesteś pewien?", :method => :delete, title: "Usuwanie" %>
          <% end %>
      <% end %>
      </tbody>
    </table>
<% end %>