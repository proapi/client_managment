<% content_for :section_header do %>
    Szczegóły dokumentu
<% end %>

<% content_for :history do %>
    <%= link_to "Rozliczenia w toku", root_url %> / <%= link_to "Szczegóły dokumentu", @document %> / <%= link_to 'Wstecz', :back %>
<% end %>

<% content_for :help do %>
    <% help_block 'Podgląd danych dokumentu' %>
<% end %>

<% content_for :main_menu do %>
    <% render 'main_menu' %>
<% end %>

<div class="table">
  <table class="listing form" cellpadding="0" cellspacing="0">
    <tr>
      <th class="full" colspan="2">Szczegóły rekordu dokumentu</th>
    </tr>
    <%= check_blank 'Nazwa dokumentu', @document.title %>
    <%= check_blank 'Treść', @document.body %>
    <%= check_blank 'Kraj', @document.country.name %>
  </table>
</div>