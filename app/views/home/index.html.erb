<% content_for :section_header do %>
    Strona główna
<% end %>

<% content_for :history do %>
    <%= link_to "Strona główna", root_url %> / <%= link_to 'Wstecz', :back %>
<% end %>

<% content_for :help do %>
    <% help_block 'Tutaj znajduje się strona główna aplikacji. Szczegóły do uzgodnienia.' %>
<% end %>

<%= content_tag :div, class: 'table' do %>
    <table id="home" class="listing" cellpadding="0" cellspacing="0">
      <thead>
      <%= content_tag :tr do %>
          <%= content_tag :th, 'Identyfikator' %>
          <%= content_tag :th, 'Nazwisko' %>
          <%= content_tag :th, 'Imię' %>
          <%= content_tag :th, 'Kraj' %>
          <%= content_tag :th, 'Numer podatkowy' %>
          <%= content_tag :th, 'Rok rozliczenia' %>
      <% end %>
      </thead>
      <tbody>
      <%= content_tag_for(:tr, @clients) do |client| %>
          <%= content_tag :td, (link_to client.identifier, client_path(client)), class: 'style1' %>
          <%= content_tag :td, (link_to client.lastname, client_path(client)), class: 'style1' %>
          <%= content_tag :td, (link_to client.firstname, client_path(client)), class: 'style1' %>
          <%= content_tag :td, "Brak" %>
          <%= content_tag :td, 'Brak' %>
          <%= content_tag :td, 'Brak' %>
      <% end %>
    </table>
<% end %>