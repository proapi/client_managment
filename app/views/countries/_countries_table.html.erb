<%= content_tag :div, class: 'table' do %>
    <table class="listing jquery_datatable" cellpadding="0" cellspacing="0">
      <thead>
      <%= content_tag :tr do %>
          <%= content_tag :th, 'Nazwa kraju' %>
          <%= content_tag :th, 'Skrót identyfikacyjny kraju' %>
          <%= content_tag :th, 'Waluta' %>
          <%= content_tag :th, 'Akcje' %>
      <% end %>
      </thead>
      <tbody>
      <%= content_tag_for(:tr, @countries) do |country| %>
          <%= content_tag :td, (link_to country.name, country_path(country)), class: 'style1' %>
          <%= content_tag :td, (link_to country.short, country_path(country)), class: 'style1' %>
          <%= content_tag :td, country.currency %>
          <%= content_tag :td do %>
              <%= link_to image_tag('info.png'), country %>
              <%= link_to image_tag('modify.png'), edit_country_path(country) %>
              <%= link_to image_tag('delete.png'), country, :confirm => "Czy jesteś pewien?", :method => :delete %>
          <% end %>
      <% end %>
      </tbody>
    </table>
<% end %>