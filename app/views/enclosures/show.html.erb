<% content_for :section_header do %>
    Szczegóły załącznika
<% end %>

<% content_for :history do %>
    <%= link_to "Załączniki", enclosures_url %> / <%= link_to "Szczegóły załącznika", enclosure_path(@enclosure) %> / <%= link_to 'Wstecz', :back %>
<% end %>

<% content_for :help do %>
    <% help_block 'Podgląd danych rozliczenia' %>
<% end %>

<% content_for :main_menu do %>
    <% render 'main_menu' %>
<% end %>

<div class="table">
  <table class="listing form" cellpadding="0" cellspacing="0">
    <tr>
      <th class="full" colspan="2">Podstawowe informacje</th>
    </tr>
    <%= check_blank 'Nazwa', @enclosure.name %>
    <%= check_blank 'Powiązane rozliczenie', @enclosure.clearing.title %>

    <%= check_blank('Data utworzenia', check_blank_value(@enclosure.created_at)) %>
    <tr>
      <td>Plik</td><td><%= link_to "Pobierz plik", @enclosure.attachment.url %></td>
    </tr>
    <tr>
      <%= check_blank 'Użytkownik tworzący', @enclosure.user.try(:name) %>
    </tr>

    <tr>
      <th class="full" colspan="2">Opis / uwagi</th>
    </tr>
    <tr>
      <td colspan="2"><%= @enclosure.description.blank? ? "Brak" : @enclosure.description %></td>
    </tr>
  </table>
</div>
