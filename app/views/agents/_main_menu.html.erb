<% if @agent && !@agent.new_record? %>
    <h3><%= @agent.name %></h3>
    <ul class="nav">
      <li><%= link_to 'Szczegóły', @agent %></li>
      <li><%= link_to 'Edycja', edit_agent_path(@agent) %></li>
      <li><%= link_to 'Usuń', @agent, :confirm => "Czy jesteś pewien?", :method => :delete %></li>
      <li></li>
    </ul>
<% end %>

